<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Companion.SpeechInstruction3">
    
    <StackLayout VerticalOptions="Fill" >

        <Image x:Name="MainImage" Margin="60,40,60,10"
           HorizontalOptions="Center" 
           VerticalOptions="Start">
            <Image.HeightRequest>
                <OnPlatform UWP="400"/>
            </Image.HeightRequest>
        </Image>
           
    <Label Margin="40,0,40,0" TextColor="Black"
           HorizontalTextAlignment="Center"
           HorizontalOptions="Center"
           VerticalOptions="EndAndExpand"
           HeightRequest="80">
        <Label.FormattedText>
            <FormattedString>
                <Span Text="Position your device " FontAttributes="None" FontSize="Small"/>
                <Span Text="close to your mouth" FontAttributes="Bold" FontSize="Small"  TextColor="#006080"/>
                <Span Text=". Start the recording and " FontAttributes="None" FontSize="Small"/> 
                <Span Text="read the sentence out loud" FontAttributes="Bold" TextColor="#006080" FontSize="Small"/>
                <Span Text=". Then stop the recording." FontAttributes="None" FontSize="Small"/> 
            </FormattedString>
        </Label.FormattedText>
    </Label>
        
    </StackLayout>
    
        
</ContentView>
