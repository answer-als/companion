<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:Companion"
             xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
             x:Class="Companion.QuestionnaireView1">
    
    
        <!--<input:RadioButtonGroupView x:Name="groupView" VerticalOptions="Center">
                <input:RadioButton Text="Option 1" LabelPosition="After" Clicked="RadioButton_Clicked" BackgroundColor="#006080"/>
                <input:RadioButton Text="Option 2" LabelPosition="Before" Color="#006080"/>
                <input:RadioButton Text="Option 3 (Click me ^_^)" Clicked="RadioButton_Clicked" CircleColor="#006080"/>
            </input:RadioButtonGroupView>-->  
    <ScrollView>
        
        <StackLayout x:Name="Backdrop" Padding="15,15,15,10" 
              VerticalOptions="Fill" 
              BackgroundColor="#e6e6e6">
        
            <Label Text="What is your highest degree or level of school you completed?"
                   TextColor="#006080" FontSize="Small"
                   FontAttributes="Bold"
                   Margin="0,0,0,5"/>
            <Entry x:Name="EducationLevel"
                   Text="" Placeholder="Enter education level"
                   Margin="20,0"
                   HeightRequest="44" WidthRequest="100"/>
        
            <BoxView Margin="0,10" HeightRequest="1" 
                 BackgroundColor="Black" 
                 HorizontalOptions="Fill"/>
        
            <Label Text="What year were you born in?"
                   TextColor="#006080" FontSize="Small"
                   FontAttributes="Bold"
                   Margin="0,0,0,5"/>
            <Entry x:Name="BirthYear"
                   Text="" Placeholder="Enter year"
                   Margin="50,0"
                   HeightRequest="44" WidthRequest="100"/>
        
            <BoxView Margin="0,10" HeightRequest="1" 
                 BackgroundColor="Black" 
                 HorizontalOptions="Fill"/>
        
            <Label Text="Please select your sex:"
                   TextColor="#006080" FontSize="Small"
                   FontAttributes="Bold"
                   Margin="0"/>
        
            <StackLayout Margin="30,0" Orientation="Horizontal" HorizontalOptions="Center" Spacing="2">
                <input:CheckBox x:Name="Male" Margin="10,0"
                                Text="M" Type="Box" LabelPosition="After"
                                Color="#006080"
                                CheckChanged="RadioButton_Clicked" />
                <input:CheckBox x:Name="Female" Margin="10,0"
                                Text="F" Type="Box" LabelPosition="After"
                                Color="#006080"
                                CheckChanged="RadioButton_Clicked" />
            </StackLayout>  
        </StackLayout>
    </ScrollView>
</ContentView>
