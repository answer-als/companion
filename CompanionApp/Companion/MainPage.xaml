<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Companion.MainPage"
             BackgroundColor="White">
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="25*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="1"
                   Text="LOGO IMAGE HERE"
                   FontSize="Large"
                   TextColor="Black"
                   HorizontalOptions="Center" />
            <Label Grid.Row="2"
                   Text="AALS Companion App"
                   FontSize="Large"
                   TextColor="Black"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Grid.Row="4"
                   x:Name="incorrect"
                   Text=""
                   FontSize="Small"
                   TextColor="Red"
                   HorizontalOptions="Center" />
            <Grid Grid.Row="4" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="44">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Entry Grid.Row="0" Grid.Column="0"
                       x:Name="userIDEntry"
                       IsPassword="false"
                       TextChanged="OnEntryStart"
                       BackgroundColor="White"
                       Placeholder="Enter user ID"
                       PlaceholderColor="LightGray"/>
                <Entry Grid.Row="1" Grid.Column="0"
                       x:Name="passwordEntry"
                       IsPassword="true"
                       TextChanged="OnEntryStart"
                       BackgroundColor="White"
                       Placeholder="Enter password"
                       Completed="OnEnterClicked"
                       PlaceholderColor="LightGray"/>
                <Button Grid.Row="1" Grid.Column="1"
                        x:Name="enterButton"
                        BackgroundColor="LightGray"
                        Text="Enter"
                        Clicked="NavigateToID"
                        TextColor="White"/>
            </Grid>
        </Grid>
</ContentPage>