<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Companion.SpeechInstruction1">
    
    <StackLayout VerticalOptions="Fill" >
        
    <Image x:Name="MainImage"
           HorizontalOptions="Center" 
           VerticalOptions="Start">
        <Image.Margin>
            <OnPlatform iOS="60,20,60,10" Android="60,20,60,0" UWP="60,40,60,10" />
        </Image.Margin>
        <Image.HeightRequest>
            <OnPlatform UWP="400" iOS="300" Android="300"/>
        </Image.HeightRequest>
    </Image>
        
    <Label Margin="40,0,40,0" TextColor="Black"
           HorizontalTextAlignment="Center"
           HorizontalOptions="Center"
           VerticalOptions="EndAndExpand"
           HeightRequest="100">
        <Label.FormattedText>
            <FormattedString>
                <Span Text="Make sure there is " FontAttributes="None" FontSize="Medium"/>
                <Span Text="no background noise" FontAttributes="Bold" FontSize="Medium" TextColor="#006080"/>
                <Span Text=", such as talking or television, for the duration of this task." FontAttributes="None" FontSize="Medium"/> 
            </FormattedString>
        </Label.FormattedText>
    </Label>
        
    </StackLayout>
    
        
</ContentView>
